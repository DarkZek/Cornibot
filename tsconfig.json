{
    "compilerOptions": {
        // Compiling options
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "sourceMap": true,
        // Other options
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "preserveSymlinks": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings",
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ],
        },
        // Strict checking options
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strict": true,
    },
    "include": [
        "src/**/*.ts",
        "src/typings",
        "tests/**/*.ts",
    ],
}